{
    "std": "c++17",
    "name": "pocket-http",
    "version": "1.0.0",
    "output": "./bin/pocket-http_${BZ_OS}_${BZ_TARGET_ARCH}_v${BZ_VERSION}",
    "include": {
        "*": [
            ".",
            "include",
            "include/bearssl",
            "src/bearssl"
        ]
    },
    "source": {
        "*": [
            "examples/download.cpp",
            "include/miniz/miniz.c",
            "src/bearssl/**/*.c",
            "src/**/*.cpp"
        ]
    },
    "options": {
        "linux": [
            "-no-pie",
            "-Os"
        ],
        "windows": [
            "/utf-8",
            "/EHsc",
            "/Os",
            "/link"
        ]
    },
    "definitions": {
        "*": [
            "USE_POCKET_HTTP_LOG",
            "USE_POCKET_HTTP_ERR",
            "USE_POCKET_HTTP_BEARSSL"
        ],
        "windows": [
            "__m128i_u=__m128i",
            "__m256i_u=__m256i"
        ]
    }
}
